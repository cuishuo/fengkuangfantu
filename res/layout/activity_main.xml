<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_background" >

    <ImageView
        android:id="@+id/titleImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:background="@color/transparent"
        android:contentDescription="@null"
        android:src="@drawable/main_title" />

    <RelativeLayout
        android:id="@+id/contentRelativeLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/titleImageView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@color/transparent" >

        <FrameLayout
            android:id="@+id/mainFramlayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:orientation="horizontal"
            android:visibility="gone" >

            <ImageView
                android:id="@+id/mainImageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:contentDescription="@null"
                android:scaleType="centerCrop"
                android:src="@drawable/main_smail" />
        </FrameLayout>

        <ImageView
            android:id="@+id/defaultImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:background="@color/transparent"
            android:contentDescription="@null"
            android:src="@drawable/main_sad" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/clickImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/titleImageView"
        android:layout_marginTop="100dp"
        android:background="@color/transparent"
        android:contentDescription="@null"
        android:src="@drawable/main_hand"
        android:visibility="invisible" />

    <RelativeLayout
        android:id="@+id/buttonRelativeLayout"
        android:layout_width="fill_parent"
        android:layout_height="170dp"
        android:layout_alignParentBottom="true"
        android:background="@color/transparent" >

        <ImageButton
            android:id="@+id/settingImagebutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:background="@color/transparent"
            android:contentDescription="@null"
            android:src="@drawable/main_setting" />

        <ImageButton
            android:id="@+id/startImagebutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:background="@color/transparent"
            android:contentDescription="@null"
            android:src="@drawable/main_start" />

        <ImageButton
            android:id="@+id/aboutImagebutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:background="@color/transparent"
            android:contentDescription="@null"
            android:src="@drawable/main_about" />
    </RelativeLayout>

</RelativeLayout>